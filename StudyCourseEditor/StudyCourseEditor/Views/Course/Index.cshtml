@model IEnumerable<StudyCourseEditor.Models.Course>

@{
    ViewBag.Title = "Список доступных курсов";
}

<h2>@ViewBag.Title</h2>

<p>
    @if (ViewBag.isUserAdmin)
    {
        @Html.ActionLink("Создать новый", "Create")
    }
   
</p>
<table>

@foreach (var item in Model)
{
    <tr>
        <td>
           @Html.RouteLink(item.Name, "Courses", new { courseName = item.Name })
        </td>
    @if (ViewBag.isUserAdmin)
    {
        <td>
            @Html.ActionLink("Редактировать", "Edit", new {id = item.ID}) |
            @Html.ActionLink("Подробнее", "Details", new {id = item.ID}) |
            @Html.ActionLink("Удалить", "Delete", new {id = item.ID})
        </td>
    }
    </tr>
}

</table>
